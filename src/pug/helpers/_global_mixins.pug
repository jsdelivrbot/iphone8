mixin a(attr)  - attr = attr || {}  a(target="_blank")&attributes(attr)    block//- Сетка по 3 блокаmixin grid-4()  .col-xs-12.col-sm-6.col-md-4.col-lg-4    block//- Сетка по 4 блокаmixin grid-3()  .col-xs-12.col-sm-6.col-md-3.col-lg-3    block//- Вывести ячейки с row в каждой строкеmixin grid-3-row()  each item, number in data    if ((number % 4) == 0)      .row        each item, j in data.slice(number, number+4)          +grid-3()            +goods(item)